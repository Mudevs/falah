<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Student View</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="container">
    
  </header>

  <header>
    <div class="f-header-container dash-header">
      <h1 class="f-logo">Falah</h1>
      <span>Student Information System</span>
      <div class="f-admin-profile pull-right">
        <p>Welcome: <%= user.local.name %> </p>
        <form action="/logout">
          <button class="btn btn-warning btn-lg" id="logout" name="logoutBtn">Log Out</button>
        </form>
      </div>
    </div>
  </header>

  <div class="search-container">
  </div>
  <div class="f-wrapper">
  <button class="btn btn-warning btn-lg pull-left f-dashboard"><a href="/dashboard"><span><i class="fa fa-chevron-left"></i></span> Dashboard</a></button>
     <br class="clear" /> 
    <div class="container">
      <div class="col-sm-6 col-sm-offset-2">
      <h1>Student Profile</h1>
          <div class="col-md-6 f-student-profile">
        <% if (student.length > 0) { %>
        <p class="hidden" id="student-id"><%= student[0]._id %></p>
        <p>First Name: <span id="firstname"><%= student[0].firstname %></span></p>
        <p>Last Name: <span id="lastname"><%= student[0].lastname %></span></p>
        <p>Contact: <span id="contact"><%= student[0].contact %></span></p>
        <p>Address: <span id="address"><%= student[0].address %></span></p>
        <p>Medical: <span id="medical"><%= student[0].medical %></span></p>
        <p>Class: <span id="class"><%= student[0].Class %></span></p>
        <% } %>
        <button id="edit-details" class="btn btn-warning btn-lg">Edit Student Details</button>
      </div>
      <div class="col-md-6 editable-details hidden">
      <form action="/updatestudentdetails" method="post">
        <label>First Name</label>
        <input type="text" name="firstname">
        <label>Last Name</label>
        <input type="text" name="lastname" >
        <label>Contact</label>
        <input type="text" name="contact" >
        <label>Address</label>
        <input type="text" name="address" >
        <label>Medical</label>
        <input type="text" name="medical" >
        <label>Class</label>
        <br />
        <select id="f-classes-edit" name="selectoptions">
            <option id="f-default">Select a class</option>
        </select>
        <br />
        <label>ID</label>
        <input type="text" name="id" readonly>
        <br />
        
          <button name="updatebutton" class="btn btn-warning btn-lg udpate-detailsbtn">Update Details</button>
          <br />
          <button name="removebutton" class="btn btn-warning btn-lg" id="f-remove-student">Remove Student</button>
      </form>
      </div>

  </div>
  </div><!-- end container div -->
  <footer>
    <ul class="f-footer-menu">
      <li><a href="/" class="f-footer-homelink">Home</a></li>
        <li><a href="#">About</a></li>
    </ul>
  </footer>
  </div><!-- end wrapper div -->

     
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
</body>
</html>