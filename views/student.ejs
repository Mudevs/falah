<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Student View</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="container">
    <h1>Student Profile</h1>
  </header>
  <div class="search-container">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 f-student-profile">
        <% if (student.length > 0) { %>
        <p class="hidden" id="student-id"><%= student[0]._id %></p>
        <p>First Name: <span id="firstname"><%= student[0].firstname %></span></p>
        <p>Last Name: <span id="lastname"><%= student[0].lastname %></span></p>
        <p>Contact: <span id="contact"><%= student[0].contact %></span></p>
        <p>Address: <span id="address"><%= student[0].address %></span></p>
        <p>Medical: <span id="medical"><%= student[0].medical %></span></p>
        <p>Class: <span id="class"><%= student[0].Class %></span></p>
        <% } %>
        <button id="edit-details">edit Student Details</button>
      </div>
      <div class="col-md-6 editable-details hidden">
      <form action="/updatestudentdetails" method="post">
        <label>First Name</label>
        <input type="text" name="firstname">
        <label>Last Name</label>
        <input type="text" name="lastname" >
        <label>Contact</label>
        <input type="text" name="contact" >
        <label>Address</label>
        <input type="text" name="address" >
        <label>Medical</label>
        <input type="text" name="medical" >
        <label>Class</label>
        <br />
        <select id="f-classes-edit" name="selectoptions">
            <option id="f-default">Select a class</option>
        </select>
        <br />
        <label>ID</label>
        <input type="text" name="id" readonly>
        <br />
        
          <button>Update Details</button>
      </form>
        <br />
        <button>Remove Student</button>
        
      </div>
    </div>
  </div>    
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
</body>
</html>