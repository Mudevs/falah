<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Search Reults</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="container">
 <% if (student.length > 0) { %>
        <h1>Class: <%= student[0].Class %></h1>
    <br class="clear" />
      <div class="pull-right">
          <input type="submit" class="btn btn-default" id="editclass" value="Edit Class">
      </div>
      <br class="clear" />
      <div class="pull-right">
        <form action="/deleteclass">
          <input type="submit" class="btn btn-default" id="editclass" name="editclassBtn" value="Remove Class">
        </form>
      </div>
  </header>
  <div class="search-container f-class-list-view">
    
        <% for(var i = 0; i <student.length; i++){ %>
        <p class=""><a href="/student/<%= student[i]._id %>"><%= student[i].firstname %> <%= student[i].lastname %></a></p>
      <% } %>    
    <% } %>
    <% if (student.length === 0) {%>
      <h3 class="alert alert-warning" role="alert">No class found with that name</h3>
      <%}%>
    <h4><a href="/dashboard">Dashboard</a></h4>
  </div>

  <div class="search-container f-edit-class-name hidden">
    <form action="/changeclassname" method="post">
      <input type="text" name="editedclassname" id="editclassbox">
      <input type="submit" value="Change Name" class="btn btn-default">
    </form>

    <button id="f-cancel" class="btn btn-default">Cancel</button>
  </div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
</body>
</html>