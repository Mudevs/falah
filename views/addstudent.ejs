<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <div class="f-header-container dash-header">
      <h1 class="f-logo">Falah</h1>
      <span>Student Information System</span>
      <div class="f-admin-profile pull-right">
        <p>Welcome: <%= user.local.name %> </p>
        <form action="/logout">
          <input type="submit" class="btn btn-warning btn-lg" id="logout" name="logoutBtn" value="Logout">
        </form>
      </div>
    </div>
     <% if (message) { %>
        <div class="alert pull-right"><%= message %></div>
    <% } %>
    <br class="clear">
  </header>
  <div class="f-wrapper">
  <button class="btn btn-warning btn-lg pull-left f-dashboard"><a href="/dashboard"><span><i class="fa fa-chevron-left"></i></span> Dashboard</a></button>
     <br class="clear" /> 
    <h1 class="addnewstudent">Add a new Student</h1>
    <div class="wrapper">
      <div class="row">
      <div class="col-md-4">
        <form action="/addstudent" method="post">
          <label>First Name</label>
          <input type="text" name="firstname" required>
          <label>Last Name</label>
          <input type="text" name="lastname" required>
          <label>Contact No.</label>
          <input type="number" name="contact" required>
          <label>Address</label>
          <input type="text" name="address" required>
          <label>Parent</label>
          <input type="text" name="parent" required>
          <label>Medical information</label>
          <textarea name="medical" required></textarea>
          <label>Class</label>
          <select id="options" name="selectoptions" required>
            <option value="" disabled selected>Select a class</option>
          </select>
          <br /> 
          <input type="submit" value="Add Student" class="btn btn-warning btn-lg" id="f-add-student">
        </form>
      </div>
    </div>
  </div>
  <footer>
    <ul class="f-footer-menu">
      <li><a href="/" class="f-footer-homelink">Home</a></li>
        <li><a href="#">About</a></li>
    </ul>
  </footer>
  </div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
</body>
</html>